    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <!-- AdminLTE Scripts -->
    <script src="~/lib/admin-lte/js/adminlte.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Bootstrap Toast Container -->
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 9999">
        <div id="toastContainer"></div>
    </div>

    <script>
        function showToast(message, type = "success") {
            let bg = type === "success" ? "bg-success" : "bg-danger";
            let icon = type === "success" ? "✔️" : "❌";

            let toast = `
                <div class="toast align-items-center text-white ${bg} border-0 show mb-2" role="alert">
                    <div class="d-flex">
                        <div class="toast-body">${icon} ${message}</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `;
            $("#toastContainer").append(toast);
            setTimeout(() => $("#toastContainer .toast").first().remove(), 3000);
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
