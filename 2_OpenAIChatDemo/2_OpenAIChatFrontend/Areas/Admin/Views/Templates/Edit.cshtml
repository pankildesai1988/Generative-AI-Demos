@model _2_OpenAIChatFrontend.Areas.Admin.DTOs.PromptTemplateUpdateDto

@{
    ViewData["Title"] = "Edit Template";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="card card-warning">
            <div class="card-header">
                <h3 class="card-title">Edit Prompt Template</h3>
            </div>
            <form id="editTemplateForm" data-id="@ViewBag.TemplateId">
                <div class="card-body">
                    @Html.Partial("_TemplateForm", Model)
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success">Update</button>
                    <a href="@Url.Action("Index", "Templates", new { area = "Admin" })" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/admin/js/auth-helper.js"></script>
    <script src="~/admin/js/template-admin.js"></script>
    <script>
        $(document).ready(function () {
            loadTemplate(@ViewBag.TemplateId);

            $("#editTemplateForm").submit(function (e) {
                e.preventDefault();
                updateTemplate(@ViewBag.TemplateId);
            });
        });
    </script>
}
