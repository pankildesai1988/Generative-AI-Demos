@{
    ViewData["Title"] = "Create Template";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Create Prompt Template</h3>
            </div>
            <form id="createTemplateForm">
                <div class="card-body">
                    @Html.Partial("_TemplateForm", new _2_OpenAIChatFrontend.Areas.Admin.DTOs.PromptTemplateCreateDto())
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success">Save</button>
                    <a href="@Url.Action("Index", "Templates", new { area = "Admin" })" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $("#createTemplateForm").submit(function (e) {
            e.preventDefault();
            createTemplate();
        });
    </script>
}
